{
  "compilerOptions": {

    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },

  "plugins": [
    {
      "name": "next"
    }
  ],
  "paths": {
    "@/*": ["./*"]
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "tsconfig.json", "drizzle.config.ts"],
  "exclude": ["node_modules"]
}
